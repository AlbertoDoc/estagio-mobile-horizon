        app:layout_constraintBaseline_toBaselineOf="@+id/editTextTempCorporal"
        app:layout_constraintEnd_toStartOf="@+id/editTextTempCorporal"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextDiasTosse"
        android:layout_width="0dp"
        android:layout_height="47dp"
